FROM rust
# Example Build / Run (inside pwsh)
# docker build -t cli-mdbook .
# $current = $pwd.Path
# docker run -it --rm -v ${current}:/docs cli-mdbook
WORKDIR /docs
RUN cd / && git clone https://github.com/cetra3/mdcollate.git && cd mdcollate && cargo build
RUN cargo install pulldown-cmark
RUN apt update
RUN apt-get install wkhtmltopdf poppler-utils -y
CMD ["/docs/build.sh"]
